<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TryAgainButton">
        <item name="android:textAppearance">@style/Text.20sp.Regular</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_try_again_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/margin_smaller</item>
        <item name="android:paddingTop">@dimen/margin_smaller</item>
        <item name="android:paddingStart">@dimen/margin_larger</item>
        <item name="android:paddingEnd">@dimen/margin_larger</item>
    </style>

    <style name="DiscountPorcentage">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_discount_porcentage</item>
        <item name="android:padding">@dimen/padding_discount_porcentage</item>

    </style>

</resources>
