<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


<style name="TryAgainButton">
        <item name="android:textAppearance">@style/Text.20sp.Regular</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_try_again_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/margin_smaller</item>
        <item name="android:paddingTop">@dimen/margin_smaller</item>
        <item name="android:paddingStart">@dimen/margin_larger</item>
        <item name="android:paddingEnd">@dimen/margin_larger</item>
    </style>

    <style name="DiscountPorcentage">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_discount_porcentage</item>
        <item name="android:padding">@dimen/padding_discount_porcentage</item>

    </style>

    <style name="ProductPrice">
        <item name="android:textColor">@color/pink</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:textAppearance">@style/Text.14sp.Bold</item>
    </style>

    <style name="ProductSize">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:textAppearance">@style/Text.14sp</item>
    </style>

    <style name="ProductLikesCount">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/Text.16sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
